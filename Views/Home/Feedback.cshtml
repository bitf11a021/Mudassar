@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<script>
    function Feedback()
    {
        if (document.feedback.feedback_name.value == "")
        {
            alert("Name field is empty");
            return false;
        }
        if (document.feedback.feedback_email.value == "")
        {
            alert("Email field is empty");
            return false;
        }
        alert("Thanx for giving feedback.");
        return true;
    }
</script>

        <h1>Feedback</h1>
        <p>Below is an example of how a contact form might look with this template:</p>
        <form action="/Home/helperFeedback" method="post" name="feedback" onsubmit="return Feedback();">
          <div class="form_settings">
            <p><span>Name</span><input class="contact" type="text" name="feedback_name" value="" /></p>
            <p><span>Email Address</span><input class="contact" type="text" name="feedback_email" value="" /></p>
            <p><span>Message</span><textarea class="contact textarea" rows="8" cols="50" name="feedback_enquiry">
	    </textarea></p>
            <p style="padding-top: 15px"><span>&nbsp;</span><input class="submit" type="submit" name="contact_submitted" value="submit" />
		</p>
          </div>
        </form>
        <p><br /><br />NOTE: A Feedback form such as this would require some way of emailing the input to an email address.</p>